<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <record id="view_real_estate_employee_tree" model="ir.ui.view">
        <field name="name">real.estate.employee.tree</field>
        <field name="model">real.estate.employee</field>
        <field name="arch" type="xml">
            <tree string="Employees" class="header_custom">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="position"/>
                <field name="department"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="hire_date"/>
                <field name="is_active"/>
                <field name="property_count"/>
            </tree>
        </field>
    </record>

    
    <record id="view_real_estate_employee_form" model="ir.ui.view">
        <field name="name">real.estate.employee.form</field>
        <field name="model">real.estate.employee</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Employee Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="general info">
                            <field name="employee_id"/>
                            <field name="position"/>
                            <field name="department"/>
                            <field name="hire_date"/>
                            <field name="is_active"/>
                        </group>
                        <group string="Extras">
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="salary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="manager_id"/>
                            <field name="partner_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Assigned Properties" name="properties">
                            <field name="property_count"/>
                            <field name="property_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                    <field name="date_availability"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

   
    <record id="view_real_estate_employee_search" model="ir.ui.view">
        <field name="name">real.estate.employee.search</field>
        <field name="model">real.estate.employee</field>
        <field name="arch" type="xml">
            <search string="Search Employees">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="position"/>
                <field name="department"/>
                <field name="email"/>
                <separator/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter string="Agents" name="agents" domain="[('position', '=', 'agent')]"/>
                <filter string="Managers" name="managers" domain="[('position', '=', 'manager')]"/>
                <filter string="Brokers" name="brokers" domain="[('position', '=', 'broker')]"/>
                <group expand="0" string="Group By">
                    <filter string="Position" name="group_position" context="{'group_by': 'position'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department'}"/>
                    <filter string="Manager" name="group_manager" context="{'group_by': 'manager_id'}"/>
                </group>
            </search>
        </field>
    </record>

    
    <record id="action_real_estate_employee" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">real.estate.employee</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first employee!
            </p>
            <p>
                Manage your real estate team by creating employee records.
                You can assign agents to properties and track their performance.
            </p>
        </field>
    </record>

    
    <menuitem
        id="employees_menu"
        name="Employees"
        parent="real_estate_root_menu"
        action="action_real_estate_employee"
        sequence="2"
    />

    

</odoo> 