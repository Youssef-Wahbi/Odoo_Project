<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_property_state_wizard_form" model="ir.ui.view">
        <field name="name">property.state.wizard.form</field>
        <field name="model">property.state.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Property State">
                <group>
                    <field name="property_id" readonly="1"/>
                    <field name="new_state"/>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button string="Apply" type="object" name="apply_change" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_property_state_wizard" model="ir.actions.act_window">
        <field name="name">Change Property State</field>
        <field name="res_model">property.state.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
