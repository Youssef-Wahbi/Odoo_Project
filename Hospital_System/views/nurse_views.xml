<odoo>
    <record id="view_nurse_tree" model="ir.ui.view">
        <field name="name">nurse.tree</field>
        <field name="model">hospital.nurse</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image_1920" widget="image" options="{'size': [64, 64]}" />
                <field name="name"/>
                <field name="department"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="shift"/>
                <field name="doctor_ids" widget="many2many_tags"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_nurse_form" model="ir.ui.view">
        <field name="name">nurse.form</field>
        <field name="model">hospital.nurse</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="active" invisible="1"/>
                </header>
                <sheet>
                    <div style="display:flex;align-items:center;gap:24px;margin-bottom:16px;">
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <h1 style="margin:0;display:flex;align-items:center;height:100%;"><field name="name"/></h1>
                    </div>
                    
                    <group col="2">
                        <group string="General Info">
                            <field name="phone"/>
                            <field name="email"/>
                            
                        </group>
                        <group string="medical details ">
                            <!-- <field name="active"/> -->
                            <field name="department"/>
                            <field name="shift"/>
                            <field name="salary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Doctors">
                            <field name="doctor_ids" context="{'form_view_ref':'view_doctor_form'}" widget="many2many_tags">
                                <tree>
                                    <field name="name"/>
                                    <field name="specialty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_nurse_kanban" model="ir.ui.view">
        <field name="name">nurse.kanban</field>
        <field name="model">hospital.nurse</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="department"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="shift"/>
                <field name="salary"/>
                <field name="doctor_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" t-att-data-id="record.id.raw_value" style="border-radius:10px;box-shadow:0 2px 8px #bfc9d4;background:#f8fafd;padding:16px;margin:8px;min-width:220px;">
                            <div style="font-size:18px;font-weight:bold;color:#1a237e;">
                                <t t-esc="record.name.raw_value"/>
                            </div>
                            <div style="color:#607d8b;font-size:14px;margin-bottom:4px;">
                                <span t-if="record.department.raw_value">Department: <t t-esc="record.department.display_value"/></span>
                            </div>
                            <div style="font-size:13px;color:#333;margin-bottom:2px;">
                                <span t-if="record.phone.raw_value">ğŸ“ <t t-esc="record.phone.raw_value"/></span>
                            </div>
                            <div style="font-size:13px;color:#333;margin-bottom:2px;">
                                <span t-if="record.email.raw_value">âœ‰ï¸ <t t-esc="record.email.raw_value"/></span>
                            </div>
                            <div style="font-size:13px;color:#333;margin-bottom:2px;">
                                <span t-if="record.shift.raw_value">ğŸ•’ <t t-esc="record.shift.display_value"/></span>
                            </div>
                            <div style="font-size:13px;color:#333;margin-bottom:2px;">
                                <span t-if="record.salary.raw_value">ğŸ’° <t t-esc="record.salary.raw_value"/></span>
                            </div>
                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_nurse" model="ir.actions.act_window">
        <field name="name">Nurses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.nurse</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first nurse record!
            </p>
        </field>
    </record>
</odoo>
