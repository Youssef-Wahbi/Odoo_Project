<odoo>
    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image_1920" widget="image" options="{'size': [64, 64]}"/>
                <field name="name"/>
                <field name="specialty"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="hire_date"/>
                <field name="nurse_id"/>
                <field name="salary"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

<record id="view_doctor_kanban" model="ir.ui.view">
    <field name="name">doctor.kanban</field>
    <field name="model">hospital.doctor</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="image_1920"/>
            <field name="name"/>
            <field name="specialty"/>
            <field name="nurse_id"/>
            <field name="patient_list"/>
            <field name="email"/>
            <field name="phone"/>

            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click" t-att-data-id="record.id.raw_value"
                         style="border-radius:10px;box-shadow:0 2px 8px #bfc9d4;background:#f8fafd;padding:16px;margin:8px;min-width:220px;display:flex;align-items:center;">
                        
                        <div style="flex:1;">
                            <div style="font-size:18px;font-weight:bold;color:#1a237e;">
                                <field name="name"/>
                            </div>
                            <div style="color:#607d8b;">
                                <span t-if="record.specialty.raw_value">
                                    Specialty: <field name="specialty"/>
                                </span><br/>
                                <span t-if="record.nurse_id.raw_value">
                                    Nurse: <field name="nurse_id"/>
                                </span>
                            </div>
                            <div style="margin-top:10px;">
                                <span style="font-weight:600;color:#1976d2;">Patients:</span>
                                <div style="font-size:13px;color:#333;">
                                    <t t-esc="record.patient_list.raw_value or '-'"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


        

    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="active" invisible="1"/>
                </header>
                <div name="button_box">
                    <button name="action_open_nurse" type="object" string="Nurses" icon="fa-users" invisible="not nurse_id"/>
                </div>
                
                <sheet>
                    <widget name="web_ribbon" invisible="active" title="Archived" bg_color="text-bg-danger"/>
                    <div style="display:flex;align-items:center;gap:24px;margin-bottom:16px;">
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <h1 style="margin:0;display:flex;align-items:center;height:100%;"><field name="name"/></h1>
                    </div>
                    
                    <group col="2">
                        <group string="General Info">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="hire_date"/>
                            
                        </group>
                        <group string="Extras">
                            <!-- <field name="active"/> -->
                            <field name="nurse_id"/>
                            <field name="salary"/>
                            <field name="specialty"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Patients">
                            <field name="patient_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="age"/>
                                    <field name="gender"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_doctor_search" model="ir.ui.view">
        <field name="name">doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="specialty"/>
                <field name="nurse_id"/>
            </search>
        </field>
    </record>



    <!-- Action -->
    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
    <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first doctor record!
            </p>
        </field>
    </record>

    <record id="view_doctor_graph" model="ir.ui.view">
        <field name="name">doctor.graph</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <graph string="Doctor Workflow" type="bar">
                <field name="active"/>
                <!-- If you add a state/status field, add it here for workflow visualization -->
            </graph>
        </field>
    </record>

</odoo>
