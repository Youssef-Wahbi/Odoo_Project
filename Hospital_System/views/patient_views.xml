    
<odoo>
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                
                <header>
                    <field name="doctor_id"/>
                    <button name="action_create_invoice" type="object" string="Create Invoice" class="btn-primary"/>
                    <button name="action_open_doctor" type="object" string="Doctor" icon="fa-user-md" invisible="not doctor_id"/>
                </header>
                
                <sheet>
                    <widget name="web_ribbon" invisible="not is_vip" title="VIP" bg_color="text-bg-warning"/>
                    <div class="oe_title">
                           <h1>Name: <field name="name"/></h1>
                        <h3><field name="gender"/></h3>
                    </div>
                    <group col="2">
                        <group string="Contact Info">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Medical Info">
                            <field name="age"/>
                            <field name="doctor_id"/>
                            <field name="bill"/>
                            <field name="room_id"/>
                            <field name="is_vip"/>
                        </group>
                    </group>
                    <notebook>
                    <page string="Treatments">
                        <field name="treatment_ids" context="{'form_view_ref':'view_hospital_treatment_form'}">
                            <tree open="1">
                                <field name="name"/>
                                <field name="date"/>
                                <field name="state"/>
                            </tree>
                        </field>
                        </page>
                    
                    <page string="Prescription">
                        <field name="prescription_ids" context="{'form_view_ref':'view_hospital_prescription_form'}">
                            <tree open="1">
                                <field name="name"/>
                                <field name="date_prescribed"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="doctor_id"/>
                <field name="age"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient record!
            </p>
        </field>
    </record>
</odoo>
