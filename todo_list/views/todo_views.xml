<?xml version="1.0" encoding="utf-8"?>
<odoo>
   

   <record id="action_todo_task_kanban" model="ir.actions.act_window">
    <field name="name">Tasks Kanban</field>
    <field name="res_model">todo.task</field>
    <field name="view_mode">kanban,form</field>
</record>

 
    
    <record id="view_todo_task_tree" model="ir.ui.view">
        <field name="name">todo.task.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" class="header_custom text-center" decoration-danger="is_overdue">

                
                
                <field name="name"/>
                <field name="status" widget="badge" decoration-info="status == 'new'" decoration-primary="status == 'in_progress'" decoration-success="status == 'completed'"/>
                <field name="description"/>
                <field name="assign_to"/>
                <field name="employee_id"/>
                <field name="due_date"/>
                <field name="estimated_time"/>
                <field name="is_overdue" invisible="1"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    
    <record id="view_todo_task_form" model="ir.ui.view">
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <field name="active" invisible="1"/>
                
                <sheet>
                    <widget name="web_ribbon" invisible="active" title="Archived" bg_color="text-bg-danger"/>
                    <widget name="web_ribbon" invisible="status != 'completed'" title="Completed" bg_color="text-bg-success"/>
                    
                    <header>
                        <field name="status" widget="statusbar"/>
                        <button name="action_new" type="object" string="Set To New"
                                class="btn-primary" invisible="status == 'new' or status == 'completed'"/>
                        <button name="action_in_progress" type="object" string="Mark as In Progress"
                                class="btn-secondary" invisible="status != 'new' or status == 'completed'"/>
                        <button name="action_completed" type="object" string="Mark as Completed"
                                class="btn-success" invisible="status != 'in_progress' or status == 'completed'"/>
                        <button name="print_task_report" string="Print Task Report" type="object" class="btn-info"/>
                    </header>
                    
                    <div name="button_box">
                        <button name="open_assignee" type="object" string="Assignee" icon="fa-user" invisible="not assign_to"/>
                    </div>

                    <div class="oe_title">
                        <h1><field name="sequence"/></h1>
                        <h3><field name="name"/></h3>
                    </div>

                    <group col="2">
                        <group string="General Info">
                            <field name="description"/>
                            <field name="is_overdue" invisible="1"/>
                            <field name="due_date"/>
                            <field name="estimated_time"/>
                            <field name="active" invisible="1"/>
                        </group>

                        <group string="Assignment Info">
                            <field name="assign_to"/>
                            <field name="employee_id"/>
                            
                        </group>
                    </group>

                    <notebook>
                        <page string="Timesheets">
                            <field name="timesheet_ids" context="{'default_task_id': active_id}">
                                <tree editable="bottom" class="text-center">
<!--                                    <field name="task_id" invisible="1"/>-->
                                    <field name="user_id"/>
                                    <field name="description"/>
                                    <field name="time_spent"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_todo_task_search" model="ir.ui.view">
        <field name="name">todo.task.search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sequence"/>
                <field name="assign_to"/>
                <field name="employee_id"/>
                <field name="status"/>
                <field name="due_date"/>
                <field name="estimated_time"/>
                
                <filter string="New" name="new" domain="[('status', '=', 'new')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                <filter string="Overdue" name="overdue" domain="[('due_date', '&lt;', context_today())]"/>
                <filter string="My Tasks" name="my_tasks" domain="[('assign_to', '=', uid)]"/>
                
                <separator/>
                <filter string="Status" name="status_group" context="{'group_by': 'status'}"/>
                <filter string="Assignee" name="assignee_group" context="{'group_by': 'assign_to'}"/>
                <filter string="Due Date" name="due_date_group" context="{'group_by': 'due_date'}"/>
                
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Assignee" name="group_by_assignee" context="{'group_by': 'assign_to'}"/>
                    <filter string="Due Date" name="group_by_due_date" context="{'group_by': 'due_date'}"/>
                    <filter string="Estimated Time" name="group_by_estimated_time" context="{'group_by': 'estimated_time'}"/>
                </group>

                

            </search>
        </field>
    </record>

    
    <record id="action_todo_task" model="ir.actions.act_window">
        <field name="name">All Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">tree,kanban,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first task!
            </p>
            <p>
                Track your tasks and manage your workload efficiently.
            </p>
        </field>
    </record>

     <record id="view_todo_task_calendar" model="ir.ui.view">
        <field name="name">todo.task.calendar</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <calendar string="Tasks Calendar" date_start="due_date" color="assign_to">
                <field name="name"/>
                <field name="assign_to"/>
            </calendar>
        </field>
    </record>

   



    
    <record id="action_close_selected_tasks" model="ir.actions.server">
        <field name="name">Close Selected Tasks</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">records.action_close_tasks()</field>
        <field name="binding_type">action</field>
    </record>

   
    <record id="ir_cron_update_overdue_tasks" model="ir.cron">
        <field name="name">Update Overdue Tasks</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">model.cron_update_overdue_tasks()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>



    
    <record id="view_todo_task_kanban" model="ir.ui.view">
        <field name="name">todo.task.kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="status" 
                    create="true" 
                    records_draggable="true"
                    group_create="false"
                    group_delete="false"
                    group_edit="false">
                <field name="name"/>
                <field name="description"/>
                <field name="employee_id"/>
                <field name="due_date"/>
                <field name="status"/>
                <field name="estimated_time"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="status" widget="label_selection" 
                                               options="{'classes': {'new': 'info', 'in_progress': 'warning', 'completed': 'success'}}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="employee_id" widget="many2one_avatar_user"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="due_date" widget="date"/>
                                            <field name="estimated_time" widget="float_time"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <field name="description" widget="text"/>
                                    </div>
                                    <div class="o_kanban_record_bottom" t-if="record.is_overdue.raw_value">
                                        <span class="badge badge-danger">Overdue</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem id="menu_todo_tasks"
              name="All Tasks"
              parent="menu_todo_root"
              action="action_todo_task"/>

</odoo>
