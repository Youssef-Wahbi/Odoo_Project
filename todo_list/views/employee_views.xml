<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_todo_employee_tree" model="ir.ui.view">
        <field name="name">todo.employee.tree</field>
        <field name="model">todo.employee</field>
        <field name="arch" type="xml">
            <tree string="Employees" class="text-center header_custom text-center"  >
               
                <field name="name"/>
                <field name="department"/>
                <field name="position"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="task_count"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    
    <record id="view_todo_employee_form" model="ir.ui.view">
        <field name="name">todo.employee.form</field>
        <field name="model">todo.employee</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <header>
                    <button name="action_view_tasks" type="object" string="View Tasks" class="oe_highlight" 
                            invisible="task_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Employee Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="general info">
                            <field name="employee_code"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="is_active"/>
                        </group>
                        <group string="Extras">
                            <field name="department"/>
                            <field name="position"/>
                            <field name="hire_date"/>
                            <field name="salary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks" name="tasks">
                            <field name="task_count" invisible="1"/>
                            <field name="task_ids" readonly="1">
                                <tree class="text-center">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="status"/>
                                    <field name="due_date"/>
                                    <field name="estimated_time"/>
                                </tree>
                            </field>
                        </page>
                        <page string="System Access" name="system_access">
                            <group>
                                <field name="user_id" help="Link to system user if the employee needs system access"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

   
    <record id="view_todo_employee_search" model="ir.ui.view">
        <field name="name">todo.employee.search</field>
        <field name="model">todo.employee</field>
        <field name="arch" type="xml">
            <search string="Search Employees">
                <field name="name"/>
                <field name="employee_code"/>
                <field name="department"/>
                <field name="position"/>
                <field name="email"/>
                <separator/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="department" context="{'group_by': 'department'}"/>
                    <filter string="Position" name="position" context="{'group_by': 'position'}"/>
                </group>
            </search>
        </field>
    </record>

   

</odoo> 