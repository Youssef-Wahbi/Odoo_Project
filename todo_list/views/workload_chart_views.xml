<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <record id="view_user_workload_graph" model="ir.ui.view">
        <field name="name">user.workload.graph</field>
        <field name="model">user.workload</field>
        <field name="arch" type="xml">
            <graph string="Employee Workload" type="bar">
                <field name="employee_name"/>
                <field name="total_tasks" type="measure"/>
            </graph>
        </field>
    </record>

    
    <record id="view_user_workload_pivot" model="ir.ui.view">
        <field name="name">user.workload.pivot</field>
        <field name="model">user.workload</field>
        <field name="arch" type="xml">
            <pivot string="Employee Workload">
                <field name="employee_name" type="row"/>
                <field name="total_tasks" type="measure"/>
                <field name="new_tasks" type="measure"/>
                <field name="in_progress_tasks" type="measure"/>
                <field name="completed_tasks" type="measure"/>
                <field name="overdue_tasks" type="measure"/>
            </pivot>
        </field>
    </record>

    
    <record id="view_user_workload_list" model="ir.ui.view">
        <field name="name">user.workload.list</field>
        <field name="model">user.workload</field>
        <field name="arch" type="xml">
            <tree string="Employee Workload" class="text-center">
                <field name="employee_name"/>
                <field name="total_tasks"/>
                <field name="new_tasks"/>
                <field name="in_progress_tasks"/>
                <field name="completed_tasks"/>
                <field name="overdue_tasks"/>
            </tree>
        </field>
    </record>

    
    <record id="view_user_workload_search" model="ir.ui.view">
        <field name="name">user.workload.search</field>
        <field name="model">user.workload</field>
        <field name="arch" type="xml">
            <search string="Search Workload">
                <field name="employee_name"/>
                <filter string="High Workload" name="high_workload" domain="[('total_tasks', '>', 5)]"/>
                <filter string="Overdue Tasks" name="overdue" domain="[('overdue_tasks', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" context="{'group_by': 'employee_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_user_workload" model="ir.actions.act_window">
        <field name="name">Employee Workload Chart</field>
        <field name="res_model">user.workload</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No workload data available!
            </p>
            <p>
                This chart shows task distribution across employees.
            </p>
        </field>
    </record>


    
</odoo>
